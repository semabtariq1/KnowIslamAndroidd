<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.semab.knowislam.MainActivity"
    android:background="#fcfcfc"
    android:orientation="horizontal"
    android:weightSum="4">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_height="match_parent"
        android:layout_width="205dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_weight="1">

        <android.support.design.widget.CollapsingToolbarLayout

            android:id="@+id/collapsingToolbar"
            android:layout_height="match_parent"
            android:layout_width="match_parent"

            app:contentScrim="?attr/colorPrimary"
            app:title="Know Islam"
            app:expandedTitleMarginStart="3dp"
            app:expandedTitleMarginEnd="3dp"
            android:background="@drawable/abc">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:textSize="35dp"
                android:textColor="#ffffff"
android:gravity="center"
            android:text="Know Islam"
                />




        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>









  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:gravity="top"
      android:layout_weight="1"
android:weightSum="2"
      >
      <android.support.v7.widget.CardView
          android:foreground="?android:attr/selectableItemBackground"
          android:clickable="true"

          android:layout_width="105dp"
          android:layout_height="156dp"
          android:layout_margin="4dp"
          android:layout_weight="1">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center" android:weightSum="4">
              <ImageView
                  android:layout_width="61dp"
                  android:layout_height="61dp"
                  android:background="@drawable/circlebackroundpurple"
                  android:src="@drawable/namaz"
                  android:padding="1dp"
                  android:layout_weight="1"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:layout_marginTop="3dp"
                  android:text="Namaz"
                  android:layout_weight="1"/>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/lightgray"
                  android:layout_margin="1dp"
                  android:layout_weight="1"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Check your bank activities"
                  android:textSize="14dp"
                  android:padding="1dp"
                  android:textColor="@android:color/darker_gray"
                  android:layout_weight="1"/>

          </LinearLayout>
      </android.support.v7.widget.CardView>
      <android.support.v7.widget.CardView
          android:foreground="?android:attr/selectableItemBackground"
          android:clickable="true"
          android:layout_width="105dp"
          android:layout_height="156dp"
          android:layout_margin="4dp"
          android:layout_weight="1">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"

              android:gravity="center" android:weightSum="4">
              <ImageView
                  android:layout_width="61dp"
                  android:layout_height="61dp"
                  android:background="@drawable/circlebackroundpurple"
                  android:src="@drawable/roza"
                  android:padding="1dp"
                  android:layout_weight="1"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:layout_marginTop="3dp"
                  android:text="Roza"
                  android:layout_weight="1"/>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/lightgray"
                  android:layout_margin="1dp"
                  android:layout_weight="1"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Check your bank activities"
                  android:textSize="14dp"
                  android:padding="1dp"
                  android:textColor="@android:color/darker_gray"
                  android:layout_weight="1"/>

          </LinearLayout>
      </android.support.v7.widget.CardView>



  </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:paddingLeft="1dp"
        android:layout_weight="1"
        android:weightSum="1"

        >
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            android:id="@+id/bankcardId"
            android:layout_width="105dp"
            android:layout_height="156dp"
            android:layout_margin="4dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:gravity="center" android:weightSum="4">
                <ImageView
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    android:background="@drawable/circlebackroundpurple"
                    android:src="@drawable/shada"
                    android:padding="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:text="Tauheed"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:layout_margin="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Check your bank activities"
                    android:textSize="14dp"
                    android:padding="1dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_weight="1"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_weight="1"
        android:weightSum="2"
        >
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            android:layout_width="105dp"
            android:layout_height="156dp"
            android:layout_margin="4dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center" android:weightSum="4">
                <ImageView
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    android:background="@drawable/circlebackroundpurple"
                    android:src="@drawable/hajj"
                    android:padding="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:text="Hajj"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:layout_margin="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Check your bank activities"
                    android:textSize="14dp"
                    android:padding="1dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_weight="1"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            android:layout_width="105dp"
            android:layout_height="156dp"
            android:layout_margin="4dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center" android:weightSum="4">
                <ImageView
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    android:background="@drawable/circlebackroundpurple"
                    android:src="@drawable/zakat"
                    android:padding="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:text="Zakat"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:layout_margin="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Check your bank activities"
                    android:textSize="14dp"
                    android:padding="1dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_weight="1"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>







</LinearLayout>
